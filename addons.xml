<?xml version="1.0" encoding="UTF-8"?>
<addons>

<addon id="repository.wortownstreams" name="Wortownstreams Repository" version="1.0.0" provider-name="Wortownstreams">
	<extension point="xbmc.addon.repository" name="Wortownstreams Repository">
		<info compressed="false">https://raw.githubusercontent.com/Wortownstreams/Wortownstreams/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/Wortownstreams/Wortownstreams/master/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/Wortownstreams/Wortownstreams/raw/master/zips</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Wortownstreams Repository</summary>
		<description>Official Repository Of Wortownstreams</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.program.wortownstreams" name="Wortownstreams Wizard" version="1.0" provider-name="Wortownstreams">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Wortownstreams Wizard</summary>
    <description lang="en">Wortownstreams Wizard allows you to get access to the latest Wortownstreams Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

</addons>
